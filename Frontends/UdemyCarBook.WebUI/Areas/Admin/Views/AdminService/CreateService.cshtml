@model CreateServiceDto

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Hizmet Ekleme Sayfası</h4>
						<p class="card-subtitle mb-4">Bu sayfa üzerinden yeni hizmet kaydını aşağıdan yapabilirsiniz.</p>

						<form method="post">
							<div class="form-group">
								<label for="exampleInputName">Hizmet Adı</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Title" placeholder="Hizmet Adını Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputIconUrl">Icon URL</label>
								<input type="text" class="form-control" id="exampleInputIconUrl" asp-for="IconUrl" placeholder="Icon Url Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<textarea rows="5" asp-for="Description" placeholder="Açıklama Giriniz" class="form-control"></textarea>
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kayıt Et</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

