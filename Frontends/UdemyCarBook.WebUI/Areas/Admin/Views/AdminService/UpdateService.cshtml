@model UpdateServiceDto

@{
	ViewData["Title"] = "UpdateService";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Hizmet Güncelleme Sayfası</h4>
						<p class="card-subtitle mb-4">Bu sayfa üzerinden kayıtlı hizmetlerin düzenlemelerini gerçekleştirebilirsiniz.</p>

						<form method="post">
							<input type="hidden" asp-for="ServiceID" />
							<div class="form-group">
								<label for="exampleInputName">Hizmet Adı</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Title" placeholder="Hizmet Adını Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputIconUrl">Icon URL</label>
								<input type="text" class="form-control" id="exampleInputIconUrl" asp-for="IconUrl" placeholder="Icon Url Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<textarea rows="5" asp-for="Description" placeholder="Açıklama Giriniz" class="form-control"></textarea>
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

