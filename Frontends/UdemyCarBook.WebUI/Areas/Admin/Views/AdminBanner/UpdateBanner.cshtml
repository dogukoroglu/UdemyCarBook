@model UpdateBannerDto

@{
	ViewData["Title"] = "UpdateBanner";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title"> Banner Güncelleme Sayfası</h4>
						<p class="card-subtitle mb-4">Bu sayfa üzerinden  banner kaydının detaylarını görebilir ve düzenleyebilirsiniz.</p>

						<form method="post">
							<input type="hidden" asp-for="BannerID" />
							<div class="form-group">
								<label for="exampleInputTitle">Başlık</label>
								<input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlık Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputVideoDescription">Video Açıklaması</label>
								<input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder=" Video Açıklamasını Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputVideoUrl">Video Url</label>
								<input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Video Url Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>


