@model CreateAuthorDto
@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Yazar Bilgisi Ekleme Sayfası</h4>
						<p class="card-subtitle mb-4">Bu sayfa üzerinden yeni yazar bilgisi kaydını yapabilir, detaylarını görebilir ve düzenleyebilirsiniz.</p>

						<form method="post">
							<div class="form-group">
								<label for="exampleInputName">Ad-Soyad</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Başlık Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<textarea rows="5" asp-for="Description" placeholder="Açıklama Giriniz" class="form-control"></textarea>
							</div>
							<div class="form-group">
								<label for="exampleInputImageUrl">Görsel Url</label>
								<input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder=" Görsle Url Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kayıt Et</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>


