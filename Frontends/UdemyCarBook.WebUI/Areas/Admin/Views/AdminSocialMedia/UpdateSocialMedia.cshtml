@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Sosyal Medya Bilgisi Güncelleme Sayfası</h4>
						<p class="card-subtitle mb-4">Bu sayfa üzerinden sosyal medya bilgisi düzenleme işlemlerini aşağıdan yapabilirsiniz.</p>

						<form method="post">
							<input type="hidden" asp-for="SocialMediaID" />
							<div class="form-group">
								<label for="exampleInputName">Hizmet Adı</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal Medya Adını Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputUrl">URL</label>
								<input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Url Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputIcon">Icon</label>
								<input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Icon Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

