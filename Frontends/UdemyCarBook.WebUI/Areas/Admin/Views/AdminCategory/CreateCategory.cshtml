@model CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Kategori Ekleme Sayfası</h4>
						<p class="card-subtitle mb-4">Bu sayfa üzerinden yeni kategori kaydını yapabilirsiniz</p>

						<form method="post">
							<div class="form-group">
								<label for="exampleInputName">Kategori Adı</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Kategori Adını Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kayıt Et</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

