@model UpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Özellik Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Bu sayfa üzerinden araçlaraın özelliklerinin detaylarını görebilir ve düzenleyebilirsiniz.</p>

                        <form method="post">
                           <input type="hidden" asp-for="FeatureID" />
                            <div class="form-group">
                                <label for="exampleInputFeature">Özellik Adı</label>
                                <input type="text" class="form-control" id="exampleInputFeature" asp-for="Name" placeholder="Araç Özellik Adını Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

