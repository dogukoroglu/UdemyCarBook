@model List<ResultFooterAddressDto>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
	$(document).ready(function () {
		$('#btn1').click(function () {
			swal("Şartlar & Koşullar", "Araba kiralama sürecine dair tüm hizmet koşullarına rezervasyonun fiziki olarak gerçekleştirileceği ofislerimizde yer alan anlaşma dökümanlarından ulaşabilirsiniz. Bütün sürecin hasar, ceza, geçişler(hgs,ogs vs.) ile ilgili detaylar yer almaktadır. Keyifli yolculuklar dileriz!");
		});

		$('#btn2').click(function () {
			swal("Güvenlik", "Carbook web sitemiz ASP.NET Core teknolojisinde SHA256 şifreleme tekniği ile verilerin tamamen şifreli olarak tutulması alt yapısına sahiptir. Sistemimizde JWT doğrulaması yapılmaktadır. Kullanıcılarımızın ödeme yaptığı kart bilgileri sistemde kesinlikle saklanmamaktadır. Türkiye Cumhuriyeti Kimlik Numarası, E-Mail Adresi ve Telefon gibi kişisel verileriniz şifrelenerek tutulmaktadır!");
		});

		$('#btn3').click(function () {
			swal("Çerez Politikası", "Sizlere daha iyi hizmet sunabilmek adına tarayıcı çerezlerini kullanmaktayız!");
		});

		$('#btn4').click(function () {
			swal("Sıkça Sorulan Sorular", "1-) Hangi belgeler gereklidir ve ne zaman sunulmalıdır? Genellikle araç kiralama işlemi için sürücü belgesi, kimlik belgesi ve kredi kartı bilgileri gereklidir.Ancak, bu gereksinimler farklılık gösterebilir.Müşterilere, hangi belgelerin gerekli olduğu ve ne zaman sunulması gerektiği konusunda net bilgi verilmelidir. \n 2-) Kiralama ücreti ne zaman ve nasıl ödenir ? Müşterilerin kiralama ücretlerini ödeme yöntemleri ve koşulları hakkında bilgi sahibi olmaları önemlidir.Ödeme seçenekleri, kredi kartıyla anlık ödeme, ön ödeme veya farklı ödeme planları olabilir.Ayrıca, ekstra ücretler veya depozito gereksinimleri gibi detaylar da açıklanmalıdır. \n 3-) İptal ve iade politikası nedir ?Müşterilerin beklenmedik durumlarda kiralama rezervasyonlarını iptal etme veya değiştirme olasılıkları olduğunda, şirketin politikası net ve anlaşılır olmalıdır.İptal süreci, geri ödeme koşulları, iptal ücretleri ve iptal etme zaman çerçevesi gibi bilgilerin belirtilmesi önemlidir.Ayrıca, müşterilere rezervasyonlarını nasıl değiştirebileceklerine dair talimatlar da sağlanmalıdır.");
		});

		$('#btn5').click(function () {
			swal("Ödeme Yöntemleri", "Ödeme yöntemleri yalnızca fiziki lokasyonlarımızdaki kiralama noktalarında kart ile yapılmaktadır!");
		});

		$('#btn6').click(function () {
			swal("Nasıl Çalışır?", "1.Adım Aracınızı Kiralayın \n 2.Adım Mailinizi Konrol Edin \n 3.Adım Ofisimize Gelin");
		});
	});
	
</script>

